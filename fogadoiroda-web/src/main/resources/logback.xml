<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[fogadoiroda] %date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger | %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="hu.gdf.oop.fogadoiroda" level="debug" />

	<root level="info">
		<appender-ref ref="console" />
	</root>

</configuration>